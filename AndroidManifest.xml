<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.m_kawato.tabletpos"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <application
        android:name="net.m_kawato.tabletpos.Globals"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.m_kawato.tabletpos.TopMenu"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.m_kawato.tabletpos.Order"
            android:label="@string/title_activity_order"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="net.m_kawato.tabletpos.Confirm"
            android:label="@string/title_activity_confirm"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="net.m_kawato.tabletpos.Receipt"
            android:label="@string/title_activity_receipt"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="net.m_kawato.tabletpos.Loading"
            android:label="@string/title_activity_loading" >
        </activity>
    </application>

</manifest>
