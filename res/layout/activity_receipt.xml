<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- loading sheet number -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
   		        android:text="@string/loading_sheet_number_label"
   		        android:textAppearance="?android:attr/textAppearanceMedium" />
	        <TextView
	            android:id="@+id/loading_sheet_number"
	            android:layout_width="120dp"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="7dp"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>    

        <!-- Date, route and place -->
        <TableLayout
    	    android:layout_width="match_parent"
   		    android:layout_height="wrap_content" >
   		    <TableRow>
   		        <TextView
   		            android:layout_width="wrap_content"
       		        android:layout_height="wrap_content"
   	    	        android:paddingRight="10dp"
   		            android:text="@string/date_label"
   		            android:textAppearance="?android:attr/textAppearanceMedium" />
       		    <TextView
   	    	        android:id="@+id/date"
   		            android:layout_width="wrap_content"
   		            android:layout_height="wrap_content"
   		            android:textAppearance="?android:attr/textAppearanceMedium" />
            </TableRow>
      	    <TableRow>
   		        <TextView
       		        android:layout_width="wrap_content"
   	    	        android:layout_height="wrap_content"
   		            android:paddingRight="10dp"
   		            android:text="@string/route_label"
   		            android:textAppearance="?android:attr/textAppearanceMedium" />
   		        <TextView
   		            android:id="@+id/route"
   		            android:layout_width="wrap_content"
       		        android:layout_height="wrap_content"
   		            android:textAppearance="?android:attr/textAppearanceMedium" />
      	    </TableRow>

      	    <TableRow>
      	        <TextView
   		            android:layout_width="wrap_content"
       		        android:layout_height="wrap_content"
   	    	        android:paddingRight="10dp"
   		            android:text="@string/place_label"
   		            android:textAppearance="?android:attr/textAppearanceMedium" />
       		    <TextView
   	    	        android:id="@+id/place"
   		            android:layout_width="wrap_content"
   		            android:layout_height="wrap_content"
   		            android:textAppearance="?android:attr/textAppearanceMedium" />
          	</TableRow>
        </TableLayout>

        <!-- Attribute labels -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:text="@string/product"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/unit_price"
                android:textAppearance="?android:attr/textAppearanceSmall" />
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/unit_price_box"
                android:textAppearance="?android:attr/textAppearanceSmall" />       
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/quantity"
                android:textAppearance="?android:attr/textAppearanceSmall" />
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/amount"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>
        
        <View 
            android:layout_width="match_parent" 
            android:layout_height="2dp"
            android:background="@android:color/darker_gray" />
    
        <!-- Current order -->
        <LinearLayout
            android:id="@+id/current_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <View 
            android:layout_width="match_parent" 
            android:layout_height="2dp"
            android:layout_marginBottom="0dp"
            android:background="@android:color/darker_gray" />

        <!-- Total amount, credit amount and cash amount -->
        <TableLayout
    	    android:layout_width="match_parent"
   		    android:layout_height="wrap_content"
   		    android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp" >
   		    <TableRow>
       		    <TextView
   		            android:layout_width="wrap_content"
   		            android:layout_height="wrap_content"
   		            android:text="@string/total_amount_label"
   		            android:textAppearance="?android:attr/textAppearanceMedium" />
   		        <TextView
       		        android:id="@+id/total_amount"
   	    	        android:layout_width="wrap_content"
   		            android:layout_height="wrap_content"
   		            android:layout_marginLeft="7dp"
   		            android:textAppearance="?android:attr/textAppearanceMedium" />
   	        </TableRow>

            <TableRow>
   		        <TextView
       		        android:layout_width="wrap_content"
   	    	        android:layout_height="wrap_content"
   		            android:text="@string/credit_amount_label"
   		            android:textAppearance="?android:attr/textAppearanceMedium" />
   		        <TextView
   		            android:id="@+id/credit_amount"
   		            android:layout_width="wrap_content"
   		            android:layout_height="wrap_content"
   		            android:layout_marginLeft="7dp"
   		            android:textAppearance="?android:attr/textAppearanceMedium" />
   		    </TableRow>
      	    <TableRow>
  	            <TextView
  	                android:layout_width="wrap_content"
  	                android:layout_height="wrap_content"
  	                android:text="@string/cash_amount_label"
  	                android:textAppearance="?android:attr/textAppearanceMedium" />
      	        <TextView
  	                android:id="@+id/cash_amount"
  	                android:layout_width="wrap_content"
  	                android:layout_height="wrap_content"
  	                android:layout_marginLeft="7dp"
  	                android:textAppearance="?android:attr/textAppearanceMedium" /> 	        
  	        </TableRow>
        </TableLayout>

        <!-- "Confirm" and "Export" buttons -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp" >

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:drawableLeft="@android:drawable/ic_media_previous"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:drawablePadding="10dp"
                android:text="@string/confirm" />

            <Button
                android:id="@+id/btn_gototop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@android:drawable/ic_menu_edit"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:drawablePadding="10dp"
                android:text="@string/gototop" />

            <Button
                android:id="@+id/btn_export"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:drawableLeft="@android:drawable/ic_menu_send"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:drawablePadding="10dp"
                android:text="@string/export" />
        </RelativeLayout>        
    </LinearLayout>
</ScrollView>
