<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingBottom="10dp"
    android:orientation="vertical" >

    <!--  Product Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="@string/product_label"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
 
        <!-- Quantity -->
        <TableRow>
            <TextView
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="@string/quantity_label" />
            <Button
                android:id="@+id/btn_quantity_down"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="@string/down" />
            <EditText
                android:id="@+id/quantity"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textSize="16sp" />
            <Button
                android:id="@+id/btn_quantity_up"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="@string/up" />
        </TableRow>
        
        <!-- Quantity (box) -->
        <TableRow>
            <TextView
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="@string/quantity_box_label"/>
            <Button
                android:id="@+id/btn_quantity_box_down"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="@string/down" />
            <EditText
                android:id="@+id/quantity_box"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textSize="16sp" />
            <Button
                android:id="@+id/btn_quantity_box_up"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="@string/up" />            
        </TableRow>
    </TableLayout>

    <!-- OK / Cancel -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp" >
        <Button 
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@android:string/ok"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />
        <Button 
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="@android:string/cancel"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />
    </LinearLayout>
        
</LinearLayout>
